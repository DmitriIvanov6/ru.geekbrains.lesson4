<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<VBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <HBox>
        <TextField fx:id="inputField" HBox.hgrow="ALWAYS" onAction="#clickSendBtn"/>
        <Button text="Send" onAction="#clickSendBtn" />
    </HBox>
    <TextArea fx:id="chatArea" VBox.vgrow="ALWAYS" editable="false"/>
</VBox>